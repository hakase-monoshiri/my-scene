Login
<%= form_for @artist, url: '/login'  do |f| %>
    <%= f.label :email %>
    <%= f.text_field :email %><br>

    <%= f.label :password %>
    <%= f.password_field :password %><br>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation  %><br>

  <%= f.submit "Login" %>
<% end %> 