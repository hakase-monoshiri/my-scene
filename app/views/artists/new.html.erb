<h1> New Artist </h1>

<% if @artist.errors.any? %>
  <div id="error_explanation">
    <h2>There were some errors:</h2>
    <ul>
      <% @artist.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %> 

<%= form_tag artists_path do %>
<%= render partial: "artists/form", locals: {artist: @artist} %>
<% end %>

<br>


<%= link_to('Get started with Github!', '/auth/github', method: :post) %>
<%= link_to('Get started with Facebook!', '/auth/facebook', method: :post) %> 
<br>
<%= link_to "Back to Artists", artists_path %> <br>